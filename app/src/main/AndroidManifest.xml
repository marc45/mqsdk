<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.startai.mqsdk">


    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- esptouch -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login2Activity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ForgetActivity" />
        <activity android:name=".ForgetEmailActivity" />
        <activity android:name=".RegisterEmailActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".util.zxing.ScanActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".util.airkiss.AirkissActivity" />
        <activity android:name=".util.esptouch.EsptouchActivity" />
        <activity android:name=".DeviceControlActivity" />
        <activity
            android:name="com.blankj.utilcode.util.PermissionUtils$PermissionActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:multiprocess="true"
            android:theme="@style/ActivityTranslucent"
            android:windowSoftInputMode="stateHidden|stateAlwaysHidden" />

        <service android:name=".MyService" />

        <activity android:name=".UserInfoActivity" />
        <activity android:name=".UpdateRemarkActivity" />
        <activity android:name=".UpdateNickNameActivity" />
        <activity android:name=".UpdatePasswordActivity" />
        <activity android:name=".LanDeviceFindActivity"></activity>
    </application>

</manifest>